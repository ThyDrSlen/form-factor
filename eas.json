{
  "cli": { "version": ">=5.9.0" },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": false,
        "buildConfiguration": "Debug"
      },
      "env": {
        "APP_VARIANT": "development"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false,
        "buildConfiguration": "Debug"
      },
      "android": { "buildType": "apk" },
      "env": {
        "APP_VARIANT": "preview"
      }
    },
    "staging": {
      "distribution": "store",
      "ios": {
        "buildConfiguration": "Release"
      },
      "env": {
        "APP_VARIANT": "staging",
        "EXPO_PUBLIC_SUPABASE_URL": "$SUPABASE_STAGING_URL",
        "EXPO_PUBLIC_SUPABASE_ANON_KEY": "$SUPABASE_STAGING_ANON_KEY"
      },
      "android": { "buildType": "app-bundle" }
    },
    "production": {
      "distribution": "store",
      "ios": {
        "buildConfiguration": "Release"
      },
      "env": {
        "APP_VARIANT": "production",
        "EXPO_PUBLIC_SUPABASE_URL": "$SUPABASE_PRODUCTION_URL",
        "EXPO_PUBLIC_SUPABASE_ANON_KEY": "$SUPABASE_PRODUCTION_ANON_KEY"
      },
      "android": { "buildType": "app-bundle" }
    }
  },
  "submit": {
    "staging": {
      "android": { "track": "internal", "releaseStatus": "draft" },
      "ios": { "appleTeamId": "NCTLNFGC6G" }
    },
    "production": {
      "android": { "track": "production", "releaseStatus": "draft" },
      "ios": { "appleTeamId": "NCTLNFGC6G" }
    }
  }
}